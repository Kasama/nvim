{
  "suggest.timeout": 2000,
  "suggest.echodocSupport": true,
  "signature.target": "float",
  "diagnostic.messageTarget": "float",
  "codeLens.enable": true,
  "explorer.icon.enableNerdfont": true,
  "explorer.icon.enableVimDevicons": true,
  "explorer.previewAction.onHover": false,
  "explorer.file.showHiddenFiles": true,
  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", ["expanded?", "collapse", "expand"], "open"],
    "cd": ["expandable?", "cd", "open"]
  },
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "args": ["--background-index"],
      "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "filetypes": ["c", "cpp", "objc", "objcpp"]
    },
    "clojure-lsp": {
      "command": "bash",
      "args": ["-c", "clojure-lsp"],
      "filetypes": ["clojure"],
      "rootPatterns": ["project.clj"],
      "additionalSchemes": ["jar", "zipfile"],
      "trace.server": "verbose",
      "initializationOptions": {}
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": [ "--lsp" ],
      "rootPatterns": ["*.cabal", ".stack.yaml", "cabal.config", "package.yaml"],
      "filetypes": ["hs", "lhs", "haskell", "lhaskell"],
      "initializationOptions": {},
    },
    "reasonml": {
      "command": "reason-language-server",
      "filetypes": ["reason"]
    },
    "ocaml": {
      "command": "ocaml-language-server",
      "args": ["--stdio"],
      "filetypes": ["ocaml"]
    },
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": ["terraform"],
      "initializationOptions": {}
    },
    "elmLS": {
      "command": "elm-language-server",
      "filetypes": ["elm"],
      "rootPatterns": ["elm.json"],
      "initializationOptions": {
        "elmAnalyseTrigger": "change"
      }
    }
  },
  "emmet.includeLanguages": {
    "reason": "javascriptreact"
  },
  "javascript.suggestionActions.enabled": false,
  "yaml.format.enable": true,
  "yaml.schemas": {
    "kubernetes": "*.kube.yaml",
    "http://json.schemastore.org/ansible-stable-2.5": "*playbook.yml",
    "http://json.schemastore.org/gitlab-ci": ".gitlab-ci.y*l"
  },
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck"
  }
}
